{
  "compilerOptions": {
    "target": "es5", // Set the ECMAScript target version
    "lib": [
      // Specify the library files to include
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true, // Avoid checking for errors in library files
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src" // Specify the directory containing your TypeScript files
  ]
}
